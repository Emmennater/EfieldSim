{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Cargo in External Terminal",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "start",
                "cmd",
                "/k",
                "cargo run"
            ],
            "problemMatcher": ["$rustc"],
            "group": {
                "kind": "build"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true
            }
        }
    ]
}
